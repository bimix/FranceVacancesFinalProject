        <Image x:ConnectionId='1' x:Name="ms_appx____Assets_XGFHFGHGFHFS_png" Margin="318,41,293,10" Source="ms-appx:///Assets/XGFHFGHGFHFS.png" Stretch="Fill" d:LayoutOverrides="TopPosition, BottomPosition" Opacity="0.25" Grid.RowSpan="2"/>
