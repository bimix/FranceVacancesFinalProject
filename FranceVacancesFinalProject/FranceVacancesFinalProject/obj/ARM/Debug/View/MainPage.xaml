                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF518BC6"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <TextBlock x:ConnectionId='12' x:Name="textBlock" TextAlignment="Center" Margin="385,18,450,2" TextWrapping="NoWrap" Text="France Vacances" FontSize="40" FontFamily="Blade Runner Movie Font" Foreground="White"/>
