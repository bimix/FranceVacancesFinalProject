<Page
    x:Class="FranceVacancesFinalProject.View.BookingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FranceVacancesFinalProject.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Left" Width="1280" Height="720" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="191*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF244D95"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="10,15,10,0" Height="80" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Button x:ConnectionId='9' x:Name="loginButton" FontSize="24
                    " Content="Login / Register" HorizontalAlignment="Right" Margin="0,-3,-3,20" VerticalAlignment="Stretch" Height="63"                          >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF244D95" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:ConnectionId='10' x:Name="textBlock" TextAlignment="Center" Margin="385,10,450,10" TextWrapping="NoWrap" Text="France Vacances" FontSize="40" FontFamily="Blade Runner Movie Font"/>
            <StackPanel HorizontalAlignment="Left" Height="77" Margin="0,-7,0,0" VerticalAlignment="Top" Width="170" Orientation="Horizontal">
                <Button x:ConnectionId='12' x:Name="backButton" FontSize="24" Content="Back" VerticalAlignment="Stretch"                          Height="63" Margin="0,0,10,0">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF244D95"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:ConnectionId='13' x:Name="homeButton" FontSize="24" Content="Home" Margin="0,0,10,0" VerticalAlignment="Stretch" HorizontalAlignment="Right"                          Height="63">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF244D95"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
            <Image x:ConnectionId='11' x:Name="Logo" HorizontalAlignment="Left" Margin="246,0,0,4" Width="84" Source="ms-appx:///Assets/3D vc.jpg"/>
        </Grid>
        <Button x:ConnectionId='1' x:Name="checkAvailabilityButton" Content="Check availability" Margin="56,0,0,185" VerticalAlignment="Bottom" Foreground="White"                                       Height="32" Width="134">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF244D95"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:ConnectionId='2' x:Name="commentTextBlock" HorizontalAlignment="Left" Margin="56,0,0,205" FontSize="16" TextWrapping="Wrap" Text="We can add an event to the datepicker, so it will automatically updatteh textblock, button is absolete" VerticalAlignment="Bottom" Height="105" Width="242"/>
        <StackPanel HorizontalAlignment="Right" Height="545" Margin="0,100,510,0" VerticalAlignment="Top" Width="379" Grid.Column="1">
            <TextBlock x:ConnectionId='6' x:Name="priceInfoTextblock" TextWrapping="Wrap" Text="Here the price for the selected dates will be displayed. Or if the apt is unavailable, show which dates are unavailable" FontSize="36" Height="288"/>
            <Button x:ConnectionId='7' x:Name="payButton" Content="Proceed to payment" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="90" FontSize="36"                         Foreground="Black">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FFEEC200" Offset="1"/>
                        <GradientStop Color="#FFE2CD00" Offset="0.044"/>
                        <GradientStop Color="#FFE2B900" Offset="0.948"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='8' x:Name="cancelPaymentButton" Content="Cancel" HorizontalAlignment="Center" Margin="21,0,225,0" VerticalAlignment="Bottom" FontSize="16"                                   Foreground="White" Width="133" Height="30">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF244D95"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="282" Margin="56,123,0,0" VerticalAlignment="Top" Width="194">
            <TextBlock x:ConnectionId='3' x:Name="textBlock1" HorizontalAlignment="Left" Height="112" TextWrapping="Wrap" Text="Booking info for apt X" VerticalAlignment="Top" Width="209" FontSize="36" Foreground="#FFE29C9C"/>
            <CalendarDatePicker x:ConnectionId='4'  x:Name="startDatePicker" Header="Start Date" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <CalendarDatePicker x:ConnectionId='5' x:Name="endDatePicker" Header="End Date" HorizontalAlignment="Left" VerticalAlignment="Top"                                                                       />
        </StackPanel>
    </Grid>
</Page>

