<Page
    x:Class="FranceVacancesFinalProject.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FranceVacancesFinalProject.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <Grid Margin="0,10,0,0" Height="80" VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF67B1FB" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Button x:ConnectionId='6' x:Name="homeButton" FontSize="24" Content="Home" Margin="25,7,0,10" VerticalAlignment="Stretch"                          Foreground="White" FontWeight="Bold">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF5EA1E4"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='7' x:Name="loginButton" FontSize="24" 
                     Content="Login / Register" HorizontalAlignment="Right" Margin="0,10,24,7" VerticalAlignment="Stretch" Height="63"                           FontFamily="Segoe UI Black">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FF518BC6"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <TextBlock x:ConnectionId='8' x:Name="textBlock" TextAlignment="Center" Margin="385,10,450,10" TextWrapping="NoWrap" Text="France Vacances" FontSize="40" FontFamily="Blade Runner Movie Font">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF0720E4" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Image x:ConnectionId='9' x:Name="Logo" HorizontalAlignment="Left" Margin="276,-3,0,0" Width="109" Source="ms-appx:///Assets/3D vc.jpg"/>
        </Grid>
        <ScrollViewer HorizontalScrollMode="Enabled" VerticalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10,10,0,10" Grid.Row="1" d:LayoutOverrides="LeftPosition, RightPosition, TopPosition, BottomPosition">
            <GridView x:ConnectionId='1' x:Name="cityGridView" Foreground="White" CanReorderItems="True">
                <GridView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF244D95" Offset="1"/>
                    </LinearGradientBrush>
                </GridView.Background>
                <StackPanel Height="476" Width="386">
                    <TextBlock x:ConnectionId='4' x:Name="textBlock1" TextWrapping="Wrap" Text="Stackpanel. City info comes here."/>
                    <Image x:ConnectionId='5' x:Name="image" Height="90" Source="ms-appx:///Assets/France Vacances TEXT.jpg"/>
                </StackPanel>
                <ItemsControl Height="97" Width="383">
                    <Image x:ConnectionId='2' x:Name="image1" Height="69" Source="ms-appx:///Assets/France Vacances TEXT.jpg" Margin="10,0,52,0"/>
                    <TextBlock x:ConnectionId='3' x:Name="textBlock2" TextWrapping="Wrap" Text="items control. City info comes here"/>
                </ItemsControl>
            </GridView>
        </ScrollViewer>

    </Grid>
</Page>

