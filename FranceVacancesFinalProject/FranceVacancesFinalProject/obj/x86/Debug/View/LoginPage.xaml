            </TextBlock>
            <TextBlock x:ConnectionId='6' x:Name="textBlock9" HorizontalAlignment="Left" Margin="38,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16">
            	<Run Foreground="White" Text="Phone "/>
            	<Run Foreground="White" Text="Number"/>
            </TextBlock>
            <TextBox x:ConnectionId='7' x:Name="textBox1" PlaceholderText="Full name" Height="5" Margin="175,125,145,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" BorderBrush="White"/>
            <TextBox x:ConnectionId='8' x:Name="textBox2" PlaceholderText="Address" Height="13" Margin="175,169,145,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" BorderBrush="White"/>
